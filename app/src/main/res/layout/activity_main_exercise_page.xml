<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/action"
    tools:context=".MainExercisePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/tit"
        android:layout_height="150dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="140dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            android:layout_centerHorizontal="true"
            app:lottie_loop="true"
            android:layout_toRightOf="@+id/lets"
            app:lottie_rawRes="@raw/exercise_life">

        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:text="Lets Go"
            android:layout_marginLeft="20dp"
            android:textSize="40dp"
            android:gravity="center"
            android:id="@+id/lets"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/backlash">

        </TextView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="9dp"
        android:id="@+id/p1"
        android:layout_marginRight="9dp"
        app:cardElevation="20dp"
        android:layout_below="@id/tit">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Breathing Exercises"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/pump"
            android:textColor="@color/black"
            android:textSize="34dp"
            android:background="@drawable/action">
        </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp"
        android:layout_below="@id/p1"
        android:id="@+id/p2"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="9dp"
        app:cardElevation="20dp">

        <TextView
            android:id="@+id/workout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/pump"
            android:gravity="center"
            android:background="@drawable/action"
            android:text="Lets Workout"
            android:textColor="@color/black"
            android:textSize="34dp">

        </TextView>
    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/p2">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="140dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            android:layout_centerHorizontal="true"
            app:lottie_loop="true"
            android:id="@+id/read11"
            app:lottie_rawRes="@raw/read1">

        </com.airbnb.lottie.LottieAnimationView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Read this"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/read11"
            android:textColor="@color/black"
            android:fontFamily="@font/pump">
        </TextView>
    </RelativeLayout>





</RelativeLayout>