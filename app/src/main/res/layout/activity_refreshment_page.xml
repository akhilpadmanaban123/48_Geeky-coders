<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".refreshment_page">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/lot"
        android:layout_centerInParent="true">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/accessing"
            app:lottie_loop="true">
        </com.airbnb.lottie.LottieAnimationView>
    </RelativeLayout>

    <TextView
        android:layout_width="60dp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:id="@+id/progress_text"
        android:layout_below="@id/lot"
        android:text="0%"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
    </TextView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lot"
        android:layout_height="150dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Slow down"
            android:textSize="130dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/slow"
            android:id="@+id/sl1"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:text="Inhale peace"
            android:fontFamily="@font/pump"
            android:layout_below="@id/sl1"
            android:layout_marginTop="9dp"
            android:id="@+id/sl2"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_height="40dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:text="Exhale worry"
            android:fontFamily="@font/pump"
            android:textColor="@color/black"
            android:layout_below="@id/sl2"
            android:gravity="center"
            android:textSize="27dp"
            android:layout_height="40dp">
        </TextView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/progress_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"></ProgressBar>


</RelativeLayout>